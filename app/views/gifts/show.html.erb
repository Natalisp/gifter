<% if current_user.id != @user.id %>
<h4> <%=  @gift.wishlist.user.first_name %> realy wants <%= @gift.name %></h4>
<h5>Store preference: <%= link_to @gift.link if @gift.link %> <%= "none" if @gift.link == nil %></h5>
<br>
<%= "You are getting it for #{ @gift.wishlist.user.first_name}" if @gift.status == "receiving" && @gift.friend_buyers.include?(current_user) %>
<%= "Someone is getting it already for #{ @gift.wishlist.user.first_name}" if @gift.status == "receiving" && !@gift.friend_buyers.include?(current_user) %>
<%= button_to "I am getting it!", gift_path(@gift, :gift => {:status => "receiving"}), method: :patch, class: "btn btn-primary" if @gift.status == "wishing" && current_user.id != @user.id %>
<br>
<br>
<% if @gift.comments.size > 0 %>
<br>
<br>
<h4>Comments</h4>

<% @comments.each do |comment| %>
  <div>
    <%= comment.content %>
    <strong>by <%= comment.user.first_name if current_user.id != comment.user.id %> <%= "You" if current_user.id == comment.user.id %></strong>
    <p><%= link_to 'Delete', gift_comment_path(@gift, comment), method: :delete, data: { confirm: 'Are you sure?' } if current_user.id == comment.user_id %></p>
<% end %>
<% end %>
<%= render 'comments/form' %>
<% else %>
<h4><%= @gift.name %></h4>
<h5>Store preference: <%= link_to @gift.link if @gift.link %> <%= "none" if @gift.link == nil %></h5>
<%= link_to "Edit", edit_gift_path(@gift) %>
<%= link_to "Delete", gift_path(@gift), :method => 'DELETE' %>
<%end%>
