<h4><%= @gift.name %></h4>
<h4>Get it at <%= link_to @gift.link %></h4>

<% if @gift.comments.size > 0 %>
<h5>Comments</h5>

<% @comments.each do |comment| %>
  <div>
    <strong><%= comment.user_name %></strong>
    <br />
    <p><%= comment.body %></p>
    <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } if current_user.id == comment.user_id %></p>
  </div>
<% end %>
<% end %>
<%= render 'comments/form' %>
