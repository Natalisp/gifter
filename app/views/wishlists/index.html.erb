<h4>Your wishlists: </h4>
<br>
<br>
<% @wishlists.each.with_index(1) do |wl, i| %>
<p>
<%= i %>. <%= link_to wl.name, user_wishlist_path(@user, wl) %>
    <%= button_to "Edit", edit_user_wishlist_path(@user, wl),  method: :get,class: "btn btn-primary" %>
    <%= button_to 'Delete', user_wishlist_path(@user, wl), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
</p>
<% end %>
