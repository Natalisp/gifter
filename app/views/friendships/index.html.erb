<div class="container" >
  <div class="row vertical-align">
   <div class="col-md-6">
         <h2>Your Friends</h2>
         <br>
       <%= "You do not have any friends yet, start searching." if current_user.friends.size == 0 %>
         <% current_user.friendships.each do |friendship| %>
           <p>
          <h3> <%= link_to friendship.friend.first_name, user_path(friendship.friend) %></h3>
          <%= link_to "Wishlists", user_wishlists_path(friendship.friend) %>
           <%= button_to 'Remove from friends', friendship, :method => :delete, class: "btn btn-primary btn-lg"  %>
           </p>
         <% end %>
   </div>
   <div class="col-md-6">
         <h2>Find User</h2>
         <br>
         <%= form_tag(users_path, :method => "get", id: "search-form") do %>
             <%= text_field_tag :search, params[:search], placeholder: "Search Users" %>
             <%= submit_tag "Search", :name => nil, class: "btn btn-primary btn-lg"  %>
         <% end %>
   </div>
  </div>
 </div>
