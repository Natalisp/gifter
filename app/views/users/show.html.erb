<br>
<% if current_user.id == @user.id || current_user.friendships.include?(Friendship.find_by(friend_id: @user.id, user_id: current_user.id)) %>
<h4><%= @user.first_name %> wishlists</h4>
    <% @user.wishlists.each do |wl| %>
    <%= link_to wl.name, user_wishlist_path(wl) %><br>
  <% end %>
  <% else %>
  <% if @user.first_name %>
  <h4>You are not friends with <%= @user.first_name %> yet...</h4>
  <% end %>
  <h4>Only friends can see user's wishlists</h4>
  <%= button_to 'Become Friends', friendships_path(:friend_id => @user.id), :method => :post %>
<% end %>
