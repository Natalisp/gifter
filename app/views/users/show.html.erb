Wishlist
<br>
<% if current_user.id == @user.id || @user.friendships.include?(Friendship.find_by(friend_id: current_user.id)) %>
    <% @user.wishlists.each do |wl| %>
    <%= link_to wl.name, wishlist_path(wl) %><br>
  <% end %>
  <% else %>
  <h4>Only friends can see user's wishlists</h4>
  <%= link_to 'Become Friends', friendships_path(:friend_id => @user.id), :method => :post %>
<% end %>
