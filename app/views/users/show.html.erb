<div class="container" >
  <div class="row vertical-align">
   <div class="col-md-6">
     <% if current_user != @user %>
         <p>
         <%= link_to "See #{@user.first_name} Wishlists", user_wishlists_path(@user) %>
         </p>
     <% else %>
         <br>
         <%= button_to "Edit Your Account Info", edit_user_registration_path(current_user), class: "btn btn-primary" %>
     <% end %>
   </div>
   <div class="col-md-6">
      <h4>Gifts You Are Buying</h4>
      <% @purchases.each.with_index(1) do |purchase, i|  %>
      <h5><%= i %>. <%= link_to purchase.name, gift_path(purchase) %> for <%= link_to purchase.wishlist.user.first_name, user_path(purchase.wishlist.user) %>
</h5>
         <% end %>
   </div>
  </div>
 </div>
